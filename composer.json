{
  "name": "allansun/openapi-parser",
  "description": "A universal OpenAPI (Swagger) schema parser",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Allan Sun",
      "email": "allan.sun@bricre.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "symfony/yaml": "^v5|^v6|^v7",
    "symfony/property-info": "^v5|^v6|^v7",
    "phpdocumentor/reflection-docblock": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10"
  },
  "config": {
    "platform": {
      "php": "8.3"
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "OpenAPI\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\OpenAPI\\": "tests"
    }
  }
}
